close all; clear; clc;
%%
data_1d         =   load("../mesh/basis/basis_1d.txt");




%%
figure()
axis equal
view([45 45])
hold on
for i=1:length(data_1d)
    plot3([data_1d(i, 1), data_1d(i, 1+3)], [data_1d(i, 2), data_1d(i, 2+3)], [data_1d(i, 3), data_1d(i, 3+3)], '-b')
    plot3([data_1d(i, 1+3), data_1d(i, 1+3+3)], [data_1d(i, 2+3), data_1d(i, 2+3)], [data_1d(i, 3), data_1d(i, 3+3)], '-r')
    input("press enter");
end
hold off